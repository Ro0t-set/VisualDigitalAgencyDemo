---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
import { MapPin, Phone, Mail, Video, ArrowDown, Instagram, Facebook } from 'lucide-astro';

// Carica dati da Keystatic usando import statici (compatibile con Cloudflare Workers)
import homepage from '../../content/pages/homepage.json';
import globalSettings from '../../content/settings/global.json';

const base = import.meta.env.BASE_URL.replace(/\/$/, '');

// Portfolio items usando import.meta.glob
const portfolioFiles = import.meta.glob('../../content/portfolio/*.json', { eager: true });
const portfolio = Object.values(portfolioFiles)
  .map((mod: any) => mod.default || mod)
  .sort((a: any, b: any) => a.order - b.order);
---

<Layout title={homepage.seo.title} description={homepage.seo.description}>

  <!-- Hero Section -->
  <section
    id="home"
    class="relative min-h-screen flex items-center hero-bg overflow-hidden"
  >
    <!-- Animated background - color shifting lights -->
    <div class="hero-animated-bg"></div>

    <div class="container-custom relative z-10 pt-20 md:pt-24 pb-8 md:pb-12">
      <!-- Logo centrato -->
      <div class="flex justify-center mb-6 md:mb-8">
        <img
          src={globalSettings.logo ? `${base}${globalSettings.logo}` : `${base}/uploads/image.png`}
          alt={globalSettings.companyName}
          class="w-full max-w-xs sm:max-w-md md:max-w-lg lg:max-w-xl"
        />
      </div>

      <!-- Text Content centrato -->
      <div class="text-center max-w-3xl mx-auto px-2">
        <p class="text-[#3B5998] text-sm sm:text-lg md:text-xl mb-4 md:mb-6 uppercase tracking-wider md:tracking-widest font-semibold">{homepage.hero.badge}</p>
        <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold mb-4 md:mb-6 text-white leading-tight">
          {homepage.hero.title}
        </h1>
        <p class="text-base sm:text-lg md:text-xl text-gray-300 mb-6 md:mb-8 leading-relaxed">
          {homepage.hero.subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center">
          <a href={homepage.hero.ctaPrimary.link} class="btn-primary text-base sm:text-lg px-6 sm:px-8 py-3 sm:py-4">
            {homepage.hero.ctaPrimary.text}
          </a>
          <a href={homepage.hero.ctaSecondary.link} class="border-2 border-white/30 text-white hover:bg-white hover:text-[#3B5998] text-base sm:text-lg px-6 sm:px-8 py-3 sm:py-4 rounded-xl font-semibold transition-all duration-300 inline-flex items-center justify-center">
            {homepage.hero.ctaSecondary.text}
          </a>
        </div>
      </div>

      <!-- Scroll indicator -->
      <div class="mt-10 md:mt-16 text-center">
        <a href="#about" class="text-white/50 hover:text-white transition-colors inline-block" aria-label="Scorri verso il basso">
          <ArrowDown class="w-6 h-6 md:w-8 md:h-8 mx-auto animate-bounce" />
        </a>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section
    id="about"
    class="section bg-cover bg-center bg-no-repeat bg-fixed"
    style={`background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('${homepage.about.backgroundImage}');`}
  >
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center reveal">
        <p class="text-white/80 uppercase tracking-widest mb-4 font-semibold">{homepage.about.badge}</p>
        <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6 md:mb-8">
          {homepage.about.title}
        </h2>
        <p class="text-base sm:text-xl text-white/90 leading-relaxed">
          {homepage.about.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Our Job Section -->
  <section id="servizi" class="section bg-gray-50">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center reveal">
        <p class="text-[#3B5998] uppercase tracking-widest mb-4 font-semibold">{homepage.services.badge}</p>
        <h2 class="section-title mb-6">{homepage.services.title}</h2>
        <p class="text-xl text-gray-600 leading-relaxed mb-8">
          {homepage.services.subtitle}
        </p>
        <div class="flex justify-center">
          <div class="icon-wrapper mb-6">
            <Video class="w-10 h-10 text-white" />
          </div>
        </div>
        <p class="text-xl md:text-2xl text-gray-700 leading-relaxed">
          {homepage.services.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Video/Trailer Section -->
  <section
    id="trailer"
    class="section bg-cover bg-center bg-no-repeat bg-fixed"
    style={`background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('${homepage.trailer.backgroundImage}');`}
  >
    <div class="container-custom relative z-10">
      <div class="text-center mb-12 reveal">
        <p class="text-white/80 uppercase tracking-wider sm:tracking-widest mb-3 sm:mb-4 font-semibold text-sm sm:text-base">{homepage.trailer.badge}</p>
        <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6 md:mb-8">
          {homepage.trailer.title}
        </h2>
      </div>

      <!-- Video placeholder with play button -->
      <div class="max-w-4xl mx-auto reveal-scale">
        <div class="relative aspect-video rounded-2xl overflow-hidden glass-card group cursor-pointer tilt-card">
          <div class="absolute inset-0 bg-gradient-to-br from-blue-900/50 to-blue-800/50 flex items-center justify-center">
            <div class="w-24 h-24 md:w-32 md:h-32 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              <img
                src={`${base}/uploads/play-button.png`}
                alt="Play"
                class="w-full h-full object-contain drop-shadow-2xl"
              />
            </div>
          </div>
          <div class="absolute bottom-4 left-4 right-4 text-center">
            <p class="text-white/80 text-sm">{homepage.trailer.playButtonText}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Portfolio Section -->
  <section id="portfolio" class="section bg-white">
    <div class="container-custom">
      <div class="text-center mb-16 reveal-scale">
        <p class="text-[#3B5998] uppercase tracking-widest mb-4 font-semibold">{homepage.portfolio.badge}</p>
        <h2 class="section-title mb-4">{homepage.portfolio.title}</h2>
        <p class="text-lg text-gray-600">{homepage.portfolio.subtitle}</p>
      </div>

      <!-- Gallery Grid with real images -->
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 stagger-children">
        {portfolio.map((item) => (
          <div class="group relative aspect-square rounded-xl overflow-hidden bg-gray-100 shadow-lg img-zoom">
            <img
              src={`${base}${item.image}`}
              alt={item.description || item.title}
              class="w-full h-full object-cover"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-blue-900/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <div class="absolute bottom-0 left-0 right-0 p-4 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
              <p class="text-white text-sm font-medium">{item.description || item.title}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Social Section -->
  <section id="social" class="section bg-gradient-to-b from-gray-50 to-white">
    <div class="container-custom">
      <div class="text-center mb-12 reveal">
        <p class="text-[#3B5998] uppercase tracking-widest mb-4 font-semibold">{homepage.social.badge}</p>
        <h2 class="section-title mb-4">{homepage.social.title}</h2>
      </div>

      <div class="flex justify-center gap-6 reveal-scale">
        {globalSettings.social.instagram && (
          <a
            href={globalSettings.social.instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="w-14 h-14 rounded-full bg-gradient-to-br from-pink-500 via-red-500 to-orange-500 flex items-center justify-center hover:scale-110 transition-transform duration-300 shadow-lg"
            aria-label="Seguici su Instagram"
          >
            <Instagram class="w-7 h-7 text-white" />
          </a>
        )}

        {globalSettings.social.facebook && (
          <a
            href={globalSettings.social.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="w-14 h-14 rounded-full bg-blue-600 flex items-center justify-center hover:scale-110 transition-transform duration-300 shadow-lg"
            aria-label="Seguici su Facebook"
          >
            <Facebook class="w-7 h-7 text-white" />
          </a>
        )}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contatti" class="section cta-section noise-overlay">
    <div class="container-custom relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
        <!-- Contact Info -->
        <div class="text-white reveal-left">
          <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6 md:mb-8">
            {homepage.contact.title}
          </h2>
          <p class="text-gray-300 text-base sm:text-lg mb-8 md:mb-10 leading-relaxed">
            {homepage.contact.description}
          </p>

          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-[#3B5998]/20 flex items-center justify-center shrink-0">
                <MapPin class="w-6 h-6 text-[#5B8BD4]" />
              </div>
              <div>
                <p class="text-white font-semibold mb-1">Indirizzo</p>
                <p class="text-gray-300">{globalSettings.contact.address}</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-[#3B5998]/20 flex items-center justify-center shrink-0">
                <Phone class="w-6 h-6 text-[#5B8BD4]" />
              </div>
              <div>
                <p class="text-white font-semibold mb-1">Telefono</p>
                <a href={`tel:${globalSettings.contact.phone.replace(/\s/g, '')}`} class="text-gray-300 hover:text-[#5B8BD4] transition-colors">{globalSettings.contact.phone}</a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-[#3B5998]/20 flex items-center justify-center shrink-0">
                <Mail class="w-6 h-6 text-[#5B8BD4]" />
              </div>
              <div>
                <p class="text-white font-semibold mb-1">Email</p>
                <a href={`mailto:${globalSettings.contact.email}`} class="text-gray-300 hover:text-[#5B8BD4] transition-colors">{globalSettings.contact.email}</a>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="reveal-right">
          <ContactForm />
        </div>
      </div>
    </div>
  </section>

</Layout>
