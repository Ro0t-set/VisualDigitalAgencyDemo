---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
import { MapPin, Phone, Mail, Video, ArrowDown, Instagram, Facebook, Camera, Megaphone } from 'lucide-astro';

// Carica dati da Keystatic (import statici compatibili con Cloudflare)
import homepage from '../../content/pages/homepage.json';
import globalSettings from '../../content/settings/global.json';

// Import immagini statiche per ottimizzazione
import logoHeroImage from '../assets/images/uploads/logo-hero.png';
import playButtonImage from '../assets/images/uploads/play-button.png';

// Import dinamico portfolio JSON e immagini (eseguito a build time)
const portfolioFiles = import.meta.glob<{ default: any }>(
  '/content/portfolio/*.json',
  { eager: true }
);

const galleryImages = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/images/gallery/**/*.{png,jpg,jpeg,webp}',
  { eager: true }
);

function getOptimizedImage(path: string | null | undefined): ImageMetadata | null {
  if (!path) return null;
  const image = galleryImages[path];
  return image?.default ?? null;
}

function isSvg(path: string | null | undefined): boolean {
  return path?.toLowerCase().endsWith('.svg') ?? false;
}

const base = import.meta.env.BASE_URL.replace(/\/$/, '');

// Portfolio items - caricati staticamente
const portfolio = Object.entries(portfolioFiles)
  .map(([filePath, mod]) => {
    const slug = filePath.split('/').pop()?.replace('.json', '') || '';
    return {
      ...mod.default,
      slug,
      optimizedImage: getOptimizedImage(mod.default.image)
    };
  })
  .sort((a, b) => (a.order ?? 0) - (b.order ?? 0));
---

<Layout title={homepage.seo.title} description={homepage.seo.description}>

  <!-- Hero Section -->
  <section
    id="home"
    class="relative min-h-screen flex items-center hero-bg overflow-hidden"
  >
    <!-- Animated background - color shifting lights -->
    <div class="hero-animated-bg">
      <div class="hero-light-3"></div>
    </div>

    <div class="container-custom relative z-10 pt-20 md:pt-24 pb-8 md:pb-12">
      <!-- Logo centrato -->
      <div class="flex justify-center mt-16 md:mt-24 mb-10 md:mb-16">
        <Image
          src={logoHeroImage}
          alt={globalSettings.companyName}
          class="w-full max-w-xs sm:max-w-md md:max-w-lg lg:max-w-xl img-darken"
          loading="eager"
        />
      </div>

      <!-- Text Content centrato -->
      <div class="text-center max-w-3xl mx-auto px-2">
        <p class="text-white/80 text-sm sm:text-lg md:text-xl mb-4 md:mb-6 uppercase tracking-wider md:tracking-widest">{homepage.hero.badge}</p>
        <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl mb-4 md:mb-6 text-white leading-tight">
          {homepage.hero.title}
        </h1>
        <p class="text-base sm:text-lg md:text-xl text-gray-300 mb-6 md:mb-8 leading-relaxed">
          {homepage.hero.subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center">
          <a href={homepage.hero.ctaPrimary.link} class="btn-primary text-base sm:text-lg px-6 sm:px-8 py-3 sm:py-4">
            {homepage.hero.ctaPrimary.text}
          </a>
          <a href={homepage.hero.ctaSecondary.link} class="border-2 border-white/30 text-white hover:bg-white hover:text-primary text-base sm:text-lg px-6 sm:px-8 py-3 sm:py-4 rounded-xl font-semibold transition-all duration-300 inline-flex items-center justify-center">
            {homepage.hero.ctaSecondary.text}
          </a>
        </div>
      </div>

      <!-- Scroll indicator -->
      <div class="mt-10 md:mt-16 text-center">
        <a href="#about" class="text-white/50 hover:text-white transition-colors inline-block" aria-label="Scorri verso il basso">
          <ArrowDown class="w-6 h-6 md:w-8 md:h-8 mx-auto animate-bounce" />
        </a>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section
    id="about"
    class="section bg-cover bg-center bg-no-repeat bg-fixed section-bg-overlay"
    style={`background-image: url('${homepage.about.backgroundImage}');`}
  >
    <div class="container-custom relative z-10">
      <div class="max-w-3xl mx-auto text-center reveal">
        <p class="text-white/80 uppercase tracking-widest mb-4">{homepage.about.badge}</p>
        <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl text-white mb-6 md:mb-8">
          {homepage.about.title}
        </h2>
        <p class="text-base sm:text-xl text-white/90 leading-relaxed">
          {homepage.about.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Our Job Section -->
  <section id="servizi" class="section bg-gray-50">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center reveal">
        <p class="text-primary uppercase tracking-widest mb-4">{homepage.services.badge}</p>
        <h2 class="section-title mb-6">{homepage.services.title}</h2>
        <p class="text-xl text-gray-600 leading-relaxed mb-8">
          {homepage.services.subtitle}
        </p>
        <div class="flex justify-center gap-6">
          <div class="icon-wrapper">
            <Camera class="w-8 h-8 text-white" />
          </div>
          <div class="icon-wrapper">
            <Video class="w-8 h-8 text-white" />
          </div>
          <div class="icon-wrapper">
            <Megaphone class="w-8 h-8 text-white" />
          </div>
        </div>
        <p class="text-xl md:text-2xl text-gray-700 leading-relaxed">
          {homepage.services.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Video/Trailer Section -->
  <section
    id="trailer"
    class="section bg-cover bg-center bg-no-repeat bg-fixed section-bg-overlay section-bg-overlay-60"
    style={`background-image: url('${homepage.trailer.backgroundImage}');`}
  >
    <div class="container-custom relative z-10">
      <div class="text-center mb-12 reveal">
        <p class="text-white/80 uppercase tracking-wider sm:tracking-widest mb-3 sm:mb-4 text-sm sm:text-base">{homepage.trailer.badge}</p>
        <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl text-white mb-6 md:mb-8">
          {homepage.trailer.title}
        </h2>
      </div>

      <!-- Video placeholder with play button -->
      <div class="max-w-4xl mx-auto reveal-scale">
        <div class="relative aspect-video rounded-2xl overflow-hidden glass-card group cursor-pointer tilt-card">
          <div class="absolute inset-0 bg-gradient-to-br from-blue-900/50 to-blue-800/50 flex items-center justify-center">
            <div class="w-24 h-24 md:w-32 md:h-32 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              <Image
                src={playButtonImage}
                alt="Play"
                width={128}
                height={128}
                class="w-full h-full object-contain drop-shadow-2xl img-darken"
              />
            </div>
          </div>
          <div class="absolute bottom-4 left-4 right-4 text-center">
            <p class="text-white/80 text-sm">{homepage.trailer.playButtonText}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Portfolio Section -->
  <section id="portfolio" class="section bg-white">
    <div class="container-custom">
      <div class="text-center mb-16 reveal-scale">
        <p class="text-primary uppercase tracking-widest mb-4">{homepage.portfolio.badge}</p>
        <h2 class="section-title mb-4">{homepage.portfolio.title}</h2>
        <p class="text-lg text-gray-600">{homepage.portfolio.subtitle}</p>
      </div>

      <!-- Gallery Grid with real images -->
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 stagger-children" id="portfolio-grid">
        {portfolio.map((item, index) => (
          <button
            type="button"
            class="group relative aspect-square rounded-xl overflow-hidden bg-gray-100 shadow-lg img-zoom cursor-pointer portfolio-item"
            data-index={index}
            aria-label={`Apri ${item.description || item.title}`}
          >
            {item.optimizedImage && !isSvg(item.image) ? (
              <Image
                src={item.optimizedImage}
                alt={item.description || item.title}
                width={400}
                height={400}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            ) : (
              <img
                src={`${base}${item.image}`}
                alt={item.description || item.title}
                class="w-full h-full object-cover"
                loading="lazy"
                decoding="async"
                width="400"
                height="400"
              />
            )}
            <div class="absolute inset-0 bg-gradient-to-t from-blue-900/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <div class="absolute bottom-0 left-0 right-0 p-4 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
              <p class="text-white text-sm font-medium">{item.description || item.title}</p>
            </div>
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Lightbox Modal -->
  <div id="lightbox" class="lightbox" aria-hidden="true" role="dialog" aria-modal="true">
    <div class="lightbox-overlay"></div>
    <button type="button" class="lightbox-close" aria-label="Chiudi">
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
    <button type="button" class="lightbox-nav lightbox-prev" aria-label="Immagine precedente">
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
    </button>
    <button type="button" class="lightbox-nav lightbox-next" aria-label="Immagine successiva">
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </button>
    <div class="lightbox-content">
      <img id="lightbox-image" src="" alt="" class="lightbox-image" />
      <p id="lightbox-caption" class="lightbox-caption"></p>
    </div>
    <div class="lightbox-counter">
      <span id="lightbox-current">1</span> / <span id="lightbox-total">1</span>
    </div>
  </div>

  <script define:vars={{ portfolioData: portfolio.map(p => ({ image: p.optimizedImage?.src || `${base}${p.image}`, title: p.description || p.title })) }}>
    const lightbox = document.getElementById('lightbox');
    const lightboxImage = document.getElementById('lightbox-image');
    const lightboxCaption = document.getElementById('lightbox-caption');
    const lightboxCurrent = document.getElementById('lightbox-current');
    const lightboxTotal = document.getElementById('lightbox-total');
    const portfolioItems = document.querySelectorAll('.portfolio-item');

    let currentIndex = 0;
    const images = portfolioData;

    function openLightbox(index) {
      currentIndex = index;
      updateLightbox();
      lightbox.classList.add('active');
      lightbox.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
    }

    function closeLightbox() {
      lightbox.classList.remove('active');
      lightbox.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    }

    function updateLightbox() {
      const item = images[currentIndex];
      lightboxImage.src = item.image;
      lightboxImage.alt = item.title;
      lightboxCaption.textContent = item.title;
      lightboxCurrent.textContent = currentIndex + 1;
      lightboxTotal.textContent = images.length;
    }

    function nextImage() {
      currentIndex = (currentIndex + 1) % images.length;
      updateLightbox();
    }

    function prevImage() {
      currentIndex = (currentIndex - 1 + images.length) % images.length;
      updateLightbox();
    }

    // Event listeners
    portfolioItems.forEach((item) => {
      item.addEventListener('click', () => {
        const index = parseInt(item.dataset.index, 10);
        openLightbox(index);
      });
    });

    document.querySelector('.lightbox-close').addEventListener('click', closeLightbox);
    document.querySelector('.lightbox-overlay').addEventListener('click', closeLightbox);
    document.querySelector('.lightbox-next').addEventListener('click', nextImage);
    document.querySelector('.lightbox-prev').addEventListener('click', prevImage);

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (!lightbox.classList.contains('active')) return;

      if (e.key === 'Escape') closeLightbox();
      if (e.key === 'ArrowRight') nextImage();
      if (e.key === 'ArrowLeft') prevImage();
    });

    // Touch swipe support
    let touchStartX = 0;
    let touchEndX = 0;

    lightbox.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
    }, { passive: true });

    lightbox.addEventListener('touchend', (e) => {
      touchEndX = e.changedTouches[0].screenX;
      const diff = touchStartX - touchEndX;
      if (Math.abs(diff) > 50) {
        if (diff > 0) nextImage();
        else prevImage();
      }
    }, { passive: true });
  </script>

  <!-- Social Section -->
  <section id="social" class="section bg-gradient-to-b from-gray-50 to-white">
    <div class="container-custom">
      <div class="text-center mb-12 reveal">
        <p class="text-primary uppercase tracking-widest mb-4">{homepage.social.badge}</p>
        <h2 class="text-3xl md:text-4xl text-gray-800 mb-4">{homepage.social.title}</h2>
      </div>

      <div class="flex justify-center gap-6 reveal-scale">
        {globalSettings.social.instagram && (
          <a
            href={globalSettings.social.instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="w-12 h-12 rounded-full bg-gradient-to-br from-pink-500 via-red-500 to-orange-500 flex items-center justify-center hover:scale-110 transition-transform duration-300"
            aria-label="Seguici su Instagram"
          >
            <Instagram class="w-5 h-5 text-white" strokeWidth={1} />
          </a>
        )}

        {globalSettings.social.facebook && (
          <a
            href={globalSettings.social.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="w-12 h-12 rounded-full bg-blue-600 flex items-center justify-center hover:scale-110 transition-transform duration-300"
            aria-label="Seguici su Facebook"
          >
            <Facebook class="w-5 h-5 text-white" strokeWidth={1} />
          </a>
        )}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contatti" class="section cta-section noise-overlay">
    <div class="container-custom relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
        <!-- Contact Info -->
        <div class="text-white reveal-left">
          <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl text-white mb-6 md:mb-8">
            {homepage.contact.title}
          </h2>
          <p class="text-gray-300 text-base sm:text-lg mb-8 md:mb-10 leading-relaxed">
            {homepage.contact.description}
          </p>

          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-primary-20 flex items-center justify-center shrink-0">
                <MapPin class="w-6 h-6 text-accent" />
              </div>
              <div>
                <p class="text-white font-semibold mb-1">Indirizzo</p>
                <p class="text-gray-300">{globalSettings.contact.address}</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-primary-20 flex items-center justify-center shrink-0">
                <Phone class="w-6 h-6 text-accent" />
              </div>
              <div>
                <p class="text-white font-semibold mb-1">Telefono</p>
                <a href={`tel:${globalSettings.contact.phone.replace(/\s/g, '')}`} class="text-gray-300 hover:text-accent transition-colors">{globalSettings.contact.phone}</a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-primary-20 flex items-center justify-center shrink-0">
                <Mail class="w-6 h-6 text-accent" />
              </div>
              <div>
                <p class="text-white font-semibold mb-1">Email</p>
                <a href={`mailto:${globalSettings.contact.email}`} class="text-gray-300 hover:text-accent transition-colors">{globalSettings.contact.email}</a>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="reveal-right">
          <ContactForm />
        </div>
      </div>
    </div>
  </section>

</Layout>
