---
interface Props {
  headline: string;
  subheadline?: string;
  backgroundImage?: string;
  cta?: {
    text: string;
    link: string;
  };
  secondaryCta?: {
    text: string;
    link: string;
  };
  compact?: boolean;
}

const { headline, subheadline, backgroundImage, cta, secondaryCta, compact = false } = Astro.props;
---

<section
  class={`relative ${compact ? 'py-16 md:py-24' : 'py-24 md:py-32'} ${backgroundImage ? '' : 'bg-gradient-to-br from-gray-50 to-gray-100'}`}
>
  {backgroundImage && (
    <div class="absolute inset-0 z-0">
      <img
        src={backgroundImage}
        alt=""
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
  )}

  <div class={`container-custom relative z-10 ${backgroundImage ? 'text-white' : ''}`}>
    <div class="max-w-3xl mx-auto text-center">
      <h1 class={`text-4xl md:text-5xl lg:text-6xl font-bold mb-6 ${!backgroundImage && 'text-gray-900'}`}>
        {headline}
      </h1>

      {subheadline && (
        <p class={`text-lg md:text-xl mb-8 ${backgroundImage ? 'text-gray-200' : 'text-gray-600'}`}>
          {subheadline}
        </p>
      )}

      {(cta || secondaryCta) && (
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          {cta && (
            <a href={cta.link} class="btn-primary">
              {cta.text}
            </a>
          )}
          {secondaryCta && (
            <a href={secondaryCta.link} class={`btn-outline ${backgroundImage ? 'border-white text-white hover:bg-white hover:text-gray-900' : ''}`}>
              {secondaryCta.text}
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</section>
