---
import Icon from './Icon.astro';

interface Props {
  title: string;
  description: string;
  icon?: string;
  image?: string;
  features?: { feature: string }[];
  link?: string;
}

const { title, description, icon, image, features, link } = Astro.props;
---

<div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow overflow-hidden">
  {image && (
    <div class="aspect-video">
      <img src={image} alt={title} class="w-full h-full object-cover" />
    </div>
  )}

  <div class="p-6">
    <div class="flex items-start gap-4 mb-4">
      {icon && (
        <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0">
          <Icon name={icon} class="w-6 h-6 text-primary" />
        </div>
      )}
      <div>
        <h3 class="text-xl font-semibold text-gray-900">
          {title}
        </h3>
      </div>
    </div>

    <p class="text-gray-600 mb-4">
      {description}
    </p>

    {features && features.length > 0 && (
      <ul class="space-y-2 mb-4">
        {features.map((f) => (
          <li class="flex items-center gap-2 text-sm text-gray-600">
            <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            {f.feature}
          </li>
        ))}
      </ul>
    )}

    {link && (
      <a href={link} class="text-primary font-medium hover:underline inline-flex items-center gap-1">
        Scopri di pi√π
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    )}
  </div>
</div>
