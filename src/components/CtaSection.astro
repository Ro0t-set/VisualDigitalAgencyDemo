---
interface Props {
  title: string;
  subtitle?: string;
  buttonText: string;
  buttonLink: string;
}

const { title, subtitle, buttonText, buttonLink } = Astro.props;
---

<section class="section cta-section">
  <div class="container-custom relative z-10">
    <div class="text-center">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 text-white">
        <span class="gradient-text">{title}</span>
      </h2>
      {subtitle && (
        <p class="text-lg md:text-xl text-gray-300 mb-10 max-w-2xl mx-auto leading-relaxed">
          {subtitle}
        </p>
      )}
      <a
        href={buttonLink}
        class="btn-primary text-lg px-10 py-4"
      >
        {buttonText}
      </a>
    </div>
  </div>
</section>
